<h1>listing all articles</h1>

<table>
<tr>
<th>Title</th>
<th>Descriptio</th>
</tr>
<% @articles.each do |article| %>
<tr>
<td><%= article.title %></td>
<td><%= article.descriptio %></td>
<td><%= link_to 'Edit', edit_article_path(article) %></td>
<td><%= link_to 'Show', article_path(article) %></td>
<td><%= link_to 'Back', articles_path %></td>
<td><%= link_to 'Delete', article_path(article),method: :delete, data: { confirm: "Are your sure?"}%></td>
</tr>
<% end %>
</table>